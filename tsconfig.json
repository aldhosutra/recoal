{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"target": "es2019",
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"newLine": "lf",
		"importHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*"]
}
